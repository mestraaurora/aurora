# Example environment variables for Mestra Aurora application
# Copy this file to .env and update with your own values
# NOTE: This file CAN be committed to version control, but .env should NEVER be committed

# Email configuration
EMAIL_ENABLED=true
SMTP_HOST=smtp.mailersend.net
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-mailersend-username
SMTP_PASS=your-mailersend-password
EMAIL_FROM=noreply@yourdomain.com

# AI Service configuration
AI_SERVICE_URL=https://openrouter.ai/api/v1/chat/completions
AI_SERVICE_API_KEY=your-openrouter-api-key
AI_SERVICE_MODEL=x-ai/grok-4.1-fast:free

# Database configuration
DATABASE_URL=postgresql://username:password@host:port/database

# Server configuration
PORT=3001